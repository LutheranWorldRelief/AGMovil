<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".dialog">

    <ImageView
        android:id="@+id/imgCacao"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/cacao_movil_main" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgCacao"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:minHeight="150dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/textoModalAccesoApp"
        android:textIsSelectable="true"
        android:textSize="16dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No volver a mostrar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:paddingTop="30dp">

        <Button
            android:id="@+id/abrirMoodleDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="#009688"
            android:outlineAmbientShadowColor="#009688"
            android:text="Aceptar"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</RelativeLayout>