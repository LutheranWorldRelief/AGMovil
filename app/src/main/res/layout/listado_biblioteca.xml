<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <com.kitchenina.app.view.EditTextRegular
        android:id="@+id/etBuscarBiblioteca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:ems="10"
        android:textSize="14sp"
        android:imeOptions="actionSearch"
        android:hint="Buscar ..."
        android:inputType="textPersonName"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" />

    <com.kitchenina.app.view.TextViewBold
        android:id="@+id/txGuias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etBuscarBiblioteca"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="GUÍAS DE GÉNERO"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerBiblioteca"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txGuias"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:focusable="true"
        android:scrollbars="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        />



</RelativeLayout>