<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/enlaceAulaVirtual"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="86dp"
        android:gravity="right"
        android:text="@string/txtAulaVirtualCacaomovil"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="123dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/logo_cacaomovil" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:foreground="@drawable/banner_cacao"
        app:srcCompat="@drawable/banner_cacao" />



    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textSize="13sp"
        android:lineSpacingExtra="5sp"
        android:text="El aula virtual de Cacao Movil pretende brindar a nuestros usuarios(as) y muy especialmente al sector de productores, promotores y técnicos(as) de campo, una opción digital, dinamica e interactiva para poner a prueba sus conocimientos sobre el cultivo.
\n\nQueremos poner a su disposición una serie de cursos, avalados por importantes instituciones de educación e investigación que han trabajado por mucho tiempo con el cultivo de cacao." />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">
        <Button
            android:id="@+id/abrirModalMoodle"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="252dp"
            android:layout_marginEnd="243dp"
            android:background="#009688"
            android:outlineAmbientShadowColor="#009688"
            android:text="@string/btnAccesoApp"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/abrirWebView"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="243dp"
            android:layout_marginTop="252dp"
            android:layout_marginEnd="2dp"
            android:background="#009688"
            android:outlineAmbientShadowColor="#009688"
            android:text="@string/btnAccesoWebView"
            android:textColor="#FFFFFF" />

    </RelativeLayout>



</RelativeLayout>