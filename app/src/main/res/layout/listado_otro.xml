<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/enlaceAulaVirtual"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="86dp"
        android:gravity="right"
        android:text="@string/txtAulaVirtualCacaomovil"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="-371dp"
        android:foreground="@drawable/banner_cacao"
        app:srcCompat="@drawable/banner_cacao" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="203dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="226dp"
        android:layout_marginEnd="20dp"
        android:lineSpacingExtra="8sp"
        android:text="@string/txtTextoIntroduccion" />

    <Button
        android:id="@+id/abrirMoodle"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="222dp"
        android:background="#009688"
        android:outlineAmbientShadowColor="#009688"
        android:text="@string/btnAccesoApp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/abrirWebView"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="225dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="20dp"
        android:background="#009688"
        android:outlineAmbientShadowColor="#009688"
        android:text="@string/btnAccesoWebView"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="123dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/logo_cacaomovil" />

</RelativeLayout>