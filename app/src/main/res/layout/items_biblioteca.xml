<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <TextView
        android:id="@+id/txOrder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="1"
        android:layout_marginLeft="6dp"
        android:background="@drawable/circle"
        android:textColor="#c5a97a"
        android:textSize="22sp" />


    <LinearLayout
        android:id="@+id/contOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/archivo"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:padding="4dp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/tipo"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:adjustViewBounds="true"
            android:padding="4dp"
            android:src="@drawable/reload" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rlCont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/contOpciones"
        android:layout_toEndOf="@+id/txOrder"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:gravity="left|center"
            android:minHeight="50dp"
            android:text="Guia"
            android:textColor="#000000"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/txDescripcion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txName"
            android:layout_marginTop="-2dp"
            android:fontFamily="@font/robotobold"
            android:gravity="left"
            android:text="Guia"
            android:textColor="#000000"
            android:textSize="12sp"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>